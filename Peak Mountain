package JavaDSA;

public class peakmountain {

	public static void main(String[] args) {
		
		int arr[] = {0,1,2,4,5,6,0,};
		int ans = retpeak(arr);
		System.out.println(ans);
	}
	
	public static int retpeak(int[] array) {
		int start=0;
		int end = 1;
		for(int i=0; i<array.length-1; i++) {
			if(array[end]<=array[start]) {
				return start;
			}
			start++;
			end++;
		}
		return -1;
	}

}


